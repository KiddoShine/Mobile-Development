<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/cream"
    android:padding="16dp">

    <ImageView
        android:id="@+id/stunting"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/buset"/>

    <TextView
        android:id="@+id/developerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp" />
    <TextView
        android:id="@+id/teks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayo, mulai perjalanan sehat anak anda bersama kami sekarang!\n Klik tombol di bawah untuk memulai."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center" />
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Mulai Sekarang"
        android:textSize="16sp" />

</LinearLayout>